<%= form_with(model: question) do |form| %>
  <% if question.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
        <% question.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.text_field :status %>
  </div>

  <div>
    <%= form.label :level, style: "display: block" %>
    <%= form.text_field :level %>
  </div>

  <div>
    <%= form.label :assigned_to, style: "display: block" %>
    <%= form.select :assigned_to, User.all.collect {|p| p.email } %>
  </div>

  <div>
    <%= form.label :start_day, style: "display: block" %>
    <%= form.datetime_field :start_day %>
  </div>
  <div>
    <%= form.label :project_id, style: "display: block" %>
    <%= form.select :project_id, options_for_select(Project.all.collect {|p| [ p.name, p.id ] }, params[:project_id]) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
